<nav
	class="nav js-nav"
	role="navigation">
	<div class="flex align-center search">
		<input class="input" placeholder="Search" type="search">
	</div>

	{{#each site.components}}
	<div class="nav__domains">
		<ol class="nav-list {{#if ./selected}}active{{/if}} js-nav-list">
			<li class="flex align-center justify-justified nav-li">
				<a class="flex grow align-center strong link nav-link nav-heading"
					tabindex="0">
					<img class="icon" src="/_theme/images/icons/{{{this.name}}}.svg">
					<span class="flex grow">{{{./title}}}</span>
				</a>
				{{#if this.versions}}
				<button class="flex align-center shrink btn btn-version">
					{{latest-version this.versions}}
					{{!-- @@include('public/_theme/images/icons/chevron.svg')--}}
					<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#000"
						viewBox="0 0 30 30">
						<path d="M15.003 21.284L6.563 9.232l1.928-.516 6.512 9.299 6.506-9.299
							1.928.516-8.434 12.052z" />
						</svg>

						<div class="popover">
							<span class="popover__heading">Current version</span>
							<ol class="ol current">
								{{#each this.versions}}
								{{#if ./latest}}
								<li class="flex align-center justify-justified li" {{#if
									./selected}}selected{{/if}} value="{{{./url}}}">{{./string}}
									{{/if}}
									{{/each}}
								</ol>
								<span class="popover__heading">Previous versions</span>
								<ol class="ol">
									{{#each this.versions}}
									{{#unless ./latest}}
									<li class="flex align-center justify-justified li" {{#if
										./selected}}selected{{/if}} value="{{{./url}}}">
										{{./string}}
										{{/unless}}
										{{#each this.navigation}}
										{{> navigation-tree items=this}}
										{{/each}}
										{{/each}}
									</ol>
								</div>
							</button>
							{{/if}}
						</li>
					</ol>
				</div>
				{{/each}}

			</nav>
